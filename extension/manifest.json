{
  "manifest_version": 3,
  "name": "dj-kompanion",
  "version": "0.1.0",
  "description": "One-click music download with DJ-ready metadata",
  "permissions": ["activeTab", "storage", "cookies"],
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*",
    "*://*.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
